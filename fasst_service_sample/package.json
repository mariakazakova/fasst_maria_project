{
  "name": "fasst_service_sample",
  "version": "0.0.0",
  "scripts": {
    "build": "node ./util/build.js",
    "build-debug": "tsc --build tsconfig.prod.json",
    "lint": "eslint --fix .",
    "lint:ci": "eslint .",
    "start": "node -r module-alias/register ./dist",
    "server:production": "npm run build && npm start",
    "server:development": "nodemon",
    "test": "mocha -r tsconfig-paths/register -r ts-node/register ./spec/**/*.spec.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@daos": "dist/daos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "dependencies": {
    "command-line-args": "^5.1.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.2.0",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.4",
    "jsonfile": "^6.1.0",
    "module-alias": "^2.2.2",
    "mongoose": "^5.11.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/chai-http": "^4.2.0",
    "chai-http": "^4.3.0",
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.4",
    "@types/jsonfile": "^6.0.0",
    "@types/mocha": "^8.0.4",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "find": "^0.3.0",
    "fs-extra": "^9.0.1",
    "mocha": "^8.2.1",
    "chai": "^4.2.0",
    "@types/chai": "^4.2.14",
    "nodemon": "^2.0.6",
    "should": "^13.2.3",
    "supertest": "^6.0.1",
    "ts-node": "^9.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  }
}
